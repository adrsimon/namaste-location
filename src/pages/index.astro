  <!-- CallToAction Widget *********** -->

  <CallToAction
    callToAction={{
      text: 'Prendre contact',
      href: 'mailto:simonguillaume@rocketmail.com',
      icon: 'tabler:at',
    }}
  >
    <Fragment slot="title">
      Namaste <br class="block" />
    </Fragment>

    <Fragment slot="subtitle">
      Ne tardez plus à prendre contact pour réserver vos vacances de rêve à deux pas d'Annecy.
    </Fragment>
  </CallToAction>
